{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "EP Helper Config",
    "description": "Simple configuration of EP Helper and it's features.",
    "required": ["status", "whitelisted-guilds"],
    "properties": {
        "whitelisted-guilds": {
            "type": "array",
            "description": "A list of whitelisted guilds the bot will stay in.",
            "items": { "type": "string" }
        },
        "status": {
            "type": "object",
            "description": "App status configuration for EP Helper.",
            "required": ["change-interval", "statuses"],
            "properties": {
                "change-interval": {
                    "type": "number",
                    "description": "How often (in seconds) EP Helper should switch between defined statuses.",
                    "minimum": 30,
                    "maximum": 600,
                    "default": 120
                },
                "statuses": {
                    "type": "array",
                    "description": "A list of statuses that EP Helper should switch between.",
                    "items": {
                        "type": "object",
                        "required": ["status", "message"],
                        "properties": {
                            "status": {
                                "type": "string",
                                "description": "The status of the app (online/idle/dnd).",
                                "enum": ["online", "idle", "dnd"]
                            },
                            "message": {
                                "type": "string",
                                "description": "The custom status message for the app."
                            }
                        }
                    }
                }
            }
        }
    }
}